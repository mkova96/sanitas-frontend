@{
    ViewData["Title"] = "Dodaj doktora";
}
@model DoctorViewModel
<form asp-action="Create" method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h2>
        Novi ljekarnik
    </h2>
    <div class="form-group">
        <label asp-for="Name">Ime</label>
        <input type="text" id="da" class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Surname">Prezime</label>
        <input type="text" id="da" class="form-control" asp-for="Surname">
    </div>
    <div class="form-group">
        <label asp-for="EMail">E-Mail adresa</label>
        <input type="text" id="da" class="form-control" asp-for="EMail">
    </div>
    <div class="form-group">
        <label asp-for="Password">Lozinka</label>
        <input type="password" class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Potvrdite lozinku</label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImagePath">Poveznica na sliku</label>
        <input asp-for="ImagePath" id="da" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address">Adresa</label>
        <input asp-for="Address" id="da" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CityId">Grad</label>
        <select asp-for="CityId" asp-items="@(new SelectList((IEnumerable<City>) @ViewData["Cities"],"CityId", "CityPbr"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <b>Hrvatska</b>
    </div>
    <div class="form-group">
        <label asp-for="About">O ljekarniku  </label>
        <textarea asp-for="About" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Education">Obrazovanje </label>
        <input type="text" id="da" class="form-control" asp-for="Education">
    </div>

    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Odustani</button>
    </a>
</form>

<style>
    #da {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        margin-left: 35px display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
</style>
