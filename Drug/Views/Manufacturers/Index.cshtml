@model PaginatedList<DrugData.Models.Manufacturer>


<!DOCTYPE html>
<html lang="eng">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">
    <link rel="stylesheet" type="text/css" href="~/css/038%20Grid.css"> <!--grid preuzet s: http://www.responsivegridsystem.com/-->
    <link rel="stylesheet" type="text/css" href="~/css/ionicons.min.css"><!--ikone preuzete sa ioicons.com-->
    <link rel="stylesheet" type="text/css" href="~/css/animate.css">

</head>
<body>
    <section class="section-1">
        <div class="row">
            <h2 class="naslov">
                Proizvodaci
            </h2>
        </div>
        @foreach (var asset in Model)
        {

            <div class="row manu">
                <div class="column1">
                    <img src="@asset.ImagePath" class="imageCell" height="150" max-width="180" />
                </div>
                <div class="column">
                    <div>
                        <h3><b><center>@asset.ManufacturerName</center></b></h3>
                    </div>
                    <div>
                        @asset.About
                    </div>
                </div>
                <div class="column1">
                    <div>
                        <h3><b><center>Proizvodi</center></b></h3>
                    </div>
                    <div>
                        @{int r = 0;}
                        @foreach (var x in asset.Drugs)
                        {
                            if (r == 5)
                            {
                                break;

                            }
                            <center>
                                <a class="lijek" asp-controller="Drugs" asp-action="Show" asp-route-id="@x.DrugId"><h4>@x.DrugName</h4></a>
                            </center>
                            ++r;

                        }
                    </div>
                </div>

            </div>

        }
        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }
        <div class="row dalje">
            <a asp-action="Index"
               asp-route-page="@(Model.PageIndex - 1)"
               asp-route-currentCategory="@ViewData["CurrentCategory"]"
               class="strelica prva @prevDisabled">
                ◄
            </a>
            <a asp-action="Index"
               asp-route-page="@(Model.PageIndex + 1)"
               asp-route-currentCategory="@ViewData["CurrentCategory"]"
               class="strelica druga @nextDisabled">
                ►
            </a>
        </div>
    </section>
</body>
</html>

  
    <style>
        * {
            box-sizing: border-box;
        }

        /* Create two equal columns that floats next to each other */
        .column {
            float: left;
            width: 40%;
            padding: 10px;
            height: 240px; /* Should be removed. Only for demonstration */
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .column1 {
            float: left;
            width: 30%;
            padding: 10px;
            height: 240px; /* Should be removed. Only for demonstration */

        }

            .column1 img { /*CENTRIRANJE SLIKEEE*/
                display: block;
                margin-left: auto;
                margin-right: auto;
            }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        .lijek{
            font-size:18px;
            color: #000;
        }

        h4 {
            font-weight:400;
            margin-bottom:4px;
        }

        .strelica {
            background-color: #f4f0f0;
            font-size: 200%;
            text-decoration: none;
            color: #808080;
        }

            .strelica.disabled,
            .strelica[disabled],
            fieldset[disabled] .strelica {
                cursor: not-allowed;
                opacity: 0.65;
                filter: alpha(opacity=65);
                -webkit-box-shadow: none;
                box-shadow: none;
            }

        a.strelica.disabled,
        fieldset[disabled] a.strelica {
            pointer-events: none;
        }

        .dalje {
            position: absolute;
        }

        .prva {
            margin-left: 300px;
        }

        .druga {
            margin-left: 750px;
        }

    </style>
