

<li class="dropdown">
    <button class="dropbtn">Proizvodaci</button>
    <ul class="dropdown-content">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Manufacturers" asp-action="Index"
                   asp-route-category="@category">@category</a>
            </li>
        }
            <li>
                <a asp-controller="Manufacturers" asp-action="Index" asp-route-category="">Svi proizvođači</a>
            </li>
    </ul>
</li>

<style>
    .dropbtn {
        background-color: #fff;
        color: #000;
        font-family: 'Lato', 'Arial', sans-serif;
        padding: 8px 0;
        text-decoration: none;
        text-transform: uppercase;
        font-size: 90%;
        border-bottom: 2px solid transparent;
        transition: border-bottom 0.2s;
        border: none;
    }

    .dropdown {
        position: relative;
        display: inline-block;
        float :left;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #fff;
        min-width: 200px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #eeebeb;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        border-bottom: 2px solid #269017;
    }
</style>