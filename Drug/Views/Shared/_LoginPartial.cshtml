    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu" id="robo">
                <li><a asp-controller="Drug" asp-action="Index">Proizvodi</a></li>
                <li><a asp-controller="Doctor" asp-action="Index">Ljekarnici</a></li>
                <li><a asp-controller="User" asp-action="Index">Korisnici</a></li>
                <li><a asp-controller="Admin" asp-action="Index">Admini</a></li>
                <li><a asp-controller="SideEffect" asp-action="Index">Nuspojave</a></li>
                <li><a asp-controller="Disease" asp-action="Index">Bolesti</a></li>
                <li><a asp-controller="Manufacturer" asp-action="Index">Proizvođači</a></li>
                <li><a asp-controller="Currency" asp-action="Index">Valute</a></li>
                <li><a asp-controller="Package" asp-action="Index">Pakiranja</a></li>


            </ul>
        </li>

    }
    else if (User.IsInRole("Owner"))
    {
        <li class="dropdown" >
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Vlasnik<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu" id="robo">
                <li><a asp-controller="Admin" asp-action="Index">Admini</a></li>
            </ul>
        </li>

    }


</ul>  
}
    else
    {
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a asp-controller="Account" asp-action="Register" class="nav-link">Registracija</a></li>
