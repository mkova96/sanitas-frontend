@model CartViewModel
<!DOCTYPE html>
<html lang="eng">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">
    <link rel="stylesheet" type="text/css" href="~/css/038%20Grid.css"> <!--grid preuzet s: http://www.responsivegridsystem.com/-->
    <link rel="stylesheet" type="text/css" href="~/css/ionicons.min.css"><!--ikone preuzete sa ioicons.com-->
    <link rel="stylesheet" type="text/css" href="~/css/animate.css">

</head>
<body>
    <section class="section-1">
        <div class="row">
            <h2 class="naslov">
                Košarica
            </h2>
        </div>
        <div class="row checkoutForm">

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Količina</th>
                        <th>Lijek</th>
                        <th class="text-right">Cijena</th>
                        <th class="text-right">Ukupno</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model.Cart.DrugCarts)
                    {
                        <tr>
                            <td class="text-center">@line.Quantity</td>
                            <td class="text-left">@line.Drug.DrugName</td>
                            <td class="text-right">@line.Drug.Price HRK</td>
                            <td class="text-right">
                                @((line.Quantity * line.Drug.Price)) HRK
                            </td>
                            <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-drugId="@line.Drug.DrugId"></a></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right">Sveukupno:</td>
                        <td class="text-right">
                            @Model.CartTotal HRK
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div>
                <div class="text-right">
                    <div class="btn-group ">
                        <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Dovrši kupnju</a>
                    </div>
                    <div class="btn-group pull-left ">
                        <a class="btn btn-success" asp-controller="Drugs" asp-action="Index">Nastavi s kupnjom</a>
                    </div>
                </div>


            </div>
        </div>
    </section>
    </body>
</html>
