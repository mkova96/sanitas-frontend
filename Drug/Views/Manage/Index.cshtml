@model IndexViewModel
    <h1>Uredi profil</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" id="da" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" id="da"class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                    <input asp-for="Email" id="da" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" id="da" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CityId">Grad</label>
                <select asp-for="CityId" asp-items="@(new SelectList((IEnumerable<City>) @ViewData["Cities"],"CityId", "CityPbr"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <b>Hrvatska</b>
            </div>
            <button type="submit" class="btn btn-primary">Spremi</button>
        </form>
    </div>
</div>

@section Scripts {
@await Html.PartialAsync("_ValidationScriptsPartial")

}

<style>
    #da {
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
</style>

