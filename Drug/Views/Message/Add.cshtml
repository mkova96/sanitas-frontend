@{
    ViewData["Title"] = "Pošalji poruku";
}
@model MessageViewModel

<h1>Nova poruka</h1>
<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ReceiverId">Primatelj</label>
        <select asp-for="ReceiverId" asp-items="@(new SelectList((IEnumerable<User>) @ViewData["Users"], "Id", "FullName"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <textarea class="form-control" asp-for="About" placeholder="Unesite poruku"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Pošalji</button>
</form>
